{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "build-web", "test"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{workspaceRoot}/dist"]
    },
    "build-web": { "dependsOn": ["build"], "outputs": ["{workspaceRoot}/dist"] },
    "test": {
      "dependsOn": ["build", "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)"]
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
